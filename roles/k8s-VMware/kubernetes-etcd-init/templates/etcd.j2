ETCD_NAME="etcd{{ etcd_nodename[-3:] }}"
ETCD_DATA_DIR="/var/lib/etcd"

ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster-01"
ETCD_INITIAL_CLUSTER="{{ etcd_initial_cluster }}"

ETCD_PEER_CLIENT_CERT_AUTH="true" 
ETCD_LISTEN_PEER_URLS="https://{{ etcd_nodeip }}:{{ kubernetes_etcd_peer_port }}"
ETCD_INITIAL_ADVERTISE_PEER_URLS="https://{{ etcd_nodeip }}:{{ kubernetes_etcd_peer_port }}"
ETCD_PEER_TRUSTED_CA_FILE=/etc/kubernetes/pki/etcd/ca.crt
ETCD_PEER_CERT_FILE=/etc/kubernetes/pki/etcd/peer.crt 
ETCD_PEER_KEY_FILE=/etc/kubernetes/pki/etcd/peer.key 

ETCD_CLIENT_CERT_AUTH="true"
ETCD_LISTEN_CLIENT_URLS="https://{{ etcd_nodeip }}:{{ kubernetes_etcd_client_port }},https://127.0.0.1:{{ kubernetes_etcd_client_port }}"
ETCD_ADVERTISE_CLIENT_URLS="https://{{ etcd_nodeip }}:{{ kubernetes_etcd_client_port }}"
ETCD_TRUSTED_CA_FILE=/etc/kubernetes/pki/etcd/ca.crt 
ETCD_CERT_FILE=/etc/kubernetes/pki/etcd/server.crt 
ETCD_KEY_FILE=/etc/kubernetes/pki/etcd/server.key


